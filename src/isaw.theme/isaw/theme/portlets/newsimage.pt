<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletNewsImage"
    i18n:domain="isaw">
  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span class="portletTopRight"></span>
  </dt>
  <dd class="portletItem"
      tal:define="ctxt nocall:view/context">

    <div class="newsImageContainer"
         tal:condition="view/has_image|nothing"
         tal:define="image_caption  python: getattr(context, 'image_caption', None)">        <a href="#"
           tal:define="here_url ctxt/@@plone_context_state/object_url;"
           tal:attributes="href string:${here_url}/image/image_view_fullscreen"
           id="parent-fieldname-image">
           <img class="newsImage"
                tal:attributes="src string:${here_url}/@@images/image/preview;
                                alt python:image_caption" src="" alt="" />
        </a>
        <p class="discreet"
           tal:condition="image_caption">
           <span tal:content="image_caption">Caption</span>
        </p>
    </div>
  </dd>
</dl>
</html>
