<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="isaw.theme">
<body>

<metal:content-core fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div tal:define="libcollections python:context.getFolderContents(contentFilter={'portal_type': 'isaw.policy.libcollection'})">

        <ul class="libcollections" >
          <tal:items tal:repeat="brain libcollections">
            <li tal:define="libcoll python:brain.getObject();
                            collection_id libcoll/id;
                            collection_url libcoll/absolute_url;
                            has_image python:getattr(libcoll, 'image', False);
                            image_url string:${collection_url}/@@images/image/mini;
                          ">

              <a tal:attributes="href libcoll/absolute_url">
                <img src="" tal:condition="has_image" tal:attributes="src image_url"/>
                <span tal:condition="not:has_image">&nbsp;</span>
                <div>
                  <h3 tal:content="libcoll/Title">[The Title]</h3>
                </div>
              </a>

            </li>
          </tal:items>
        </ul>

   </div>

  </metal:content-core>
</metal:content-core>

</body>
</html>