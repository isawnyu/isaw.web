<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="isaw.theme">

<head>

    <metal:block fill-slot="style_slot"
        tal:define="navroot context/@@plone_portal_state/navigation_root_url;
                    base string:${navroot}/++theme++isaw.theme">
        <link rel="stylesheet" type="text/css"
              tal:attributes="href string:${base}/map.css"
            />
        <link rel="stylesheet" type="text/css"
              tal:attributes="href string:${base}/js/leaflet@1.9.4/leaflet.css"
            />
        <link rel="stylesheet"
            tal:attributes="href string:${base}/js/leaflet.markercluster@1.5.3/MarkerCluster.css"/>
        <link rel="stylesheet"
            tal:attributes="href string:${base}/js/leaflet.markercluster@1.5.3/MarkerCluster.Default.css"/>
        <link rel="stylesheet"
            tal:attributes="href string:${base}/resetbounds.css">
    </metal:block>

    <metal:block fill-slot="javascript_head_slot"
        tal:define="navroot context/@@plone_portal_state/navigation_root_url;
                    base string:${navroot}/++theme++isaw.theme">
        <script src="../dist/leaflet@1.9.4/leaflet.js"
                tal:attributes="src string:${base}/js/leaflet@1.9.4/leaflet.js"></script>
        <script src="../dist/leaflet.markercluster@1.5.3/leaflet.markercluster.js"
                tal:attributes="src string:${base}/js/leaflet.markercluster@1.5.3/leaflet.markercluster.js"></script>

        <script src="../js/resetbounds.js"
                tal:attributes="src string:${base}/js/resetbounds.js"></script>
        <script src="../dist/papaparse@5.4.1/papaparse.min.js"
                tal:attributes="src string:${base}/js/papaparse@5.4.1/papaparse.min.js">
        </script>
    </metal:block>
</head>

<body>

<metal:content-core fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <tal:map define="alumni_vrs python:'alumni' in request.get('URL0') and 'alumni' or '';
                   alumni_vrs python:'visiting-research-scholars' in request.get('URL0') and 'vrs' or alumni_vrs"
           condition="alumni_vrs">
    <p>
      <a role="button"
         href="#"
         id="map-hide-show-link">
          <span id="map_view">View a map of alumni institutions</span>
          <span id="map_hide" style="display:none">Close map</span>
         </a>
    </p>
    <div id="map" style="display:none;">
    </div>
    <script src="../js/map-alumni[or]vrs.js"
            tal:define="navroot context/@@plone_portal_state/navigation_root_url;
                        base string:${navroot}/++theme++isaw.theme"
            tal:attributes="src string:${base}/js/map-${alumni_vrs}.js">
    </script>
  </tal:map>

    <div id="people">
      <tal:faculty>
        <div class="facultyListing" tal:repeat="person view/people">
          <a tal:attributes="href person/url">
            <span class="facultyImage">
              <img src="" alt="" tal:condition="person/has_image" tal:attributes="src person/image_url"/>
              <span tal:condition="not:person/has_image">&nbsp;</span>
            </span>
            <h2 tal:content="person/name">[Roger Bagnall]</h2>
          </a>
          <div class="facultyInfo">
            <div tal:content="structure person/html_blurb" class="facultyPosition">[Director]</div>
            <div tal:condition="person/email"
                 tal:content="person/email" class="facultyEmail">[roger.bagnall@nyu.edu]</div>
          </div>
        </div>

   </tal:faculty>
   </div>

  </metal:content-core>
</metal:content-core>

</body>
</html>
