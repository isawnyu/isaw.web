<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:block fill-slot="head_slot">
    <link rel="meta" type="application/rdf+xml" title="Profile FOAF data" href="foaf.rdf" />
    <script src="https://use.fontawesome.com/63f0007faf.js"></script>
</metal:block>

<metal:block fill-slot="content-title" />

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <div class="ProfileContent"
             tal:define="person_url context/absolute_url;
                         has_image python:getattr(context, 'profileImage', False);
                         image_url string:${person_url}/@@images/profileImage/mini;
                         email context/email;
                         phone context/phone;
                         address context/address">
            <div class="ProfileHeader">
                <div class="ProfileImage" tal:condition="has_image">
                    <img src="" alt="" tal:attributes="src image_url" />
                </div>
                <div class="ProfileInfo">
                    <h1 class="ProfileName" tal:content="context/Title">Name</h1>
                    <div class="ProfilePronouns" tal:condition="context/pronouns"
                         tal:content="context/pronouns" />
                    <div class="ProfileTitles" tal:condition="context/titles"
                         tal:content="structure context/titles/output" />

                    <div class="ProfileContact" tal:condition="python:email or phone or address">
                        <a tal:condition="email" tal:attributes="href string:mailto:${email}" tal:content="string:${email}">Email</a>
                        <span tal:condition="phone" class="phone" tal:content="string:${phone}">Phone</span>
                        <span tal:condition="address" class="address" tal:content="string:${address}">Address</span>
                    </div>
                </div>
            </div>
            <ul class="ProfileLinks discreet"
                tal:define="profile_links context/get_profile_links"
                tal:condition="profile_links">
                <li tal:repeat="link profile_links">
                    <a href="#"
                       tal:attributes="href link/link" tal:content="link/text">
                       Text
                    </a>
                </li>
            </ul>

            <div class="ProfileBlurb"
                 tal:define="blurb context/profileBlurb"
                 tal:condition="blurb"
                 tal:content="structure blurb/output">Blurb</div>
        </div>

    </metal:content-core>
</metal:content-core>

</body>
</html>
